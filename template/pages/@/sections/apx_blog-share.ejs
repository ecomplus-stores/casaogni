<% console.log(_.store.domain) 

let shareUrl = "https://" + _.store.domain + _.route.path
%>
<section class="apx_blog-share">
  <div class="container">
    <div class="d-flex align-items-center justify-content-center">
      <strong>Compartilhe:</strong>
      <div class="d-flex align-items-center share">
        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= shareUrl %>">
          <i class="i-facebook"></i>  
        </a>
        <a target="_blank" href="https://x.com/intent/post?url=<%= shareUrl %>">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/>
          </svg>
        </a>
        <a href="https://pinterest.com/pin/create/button/?url=<%= shareUrl %>">
          <i class="i-pinterest"></i>  
        </a>
        <a target="_blank" href="https://api.whatsapp.com/send?text=<%= _.state.title %> - <%= shareUrl %>">
          <i class="i-whatsapp"></i>  
        </a>
        
      </div>
    </div>
  </div>
</section>